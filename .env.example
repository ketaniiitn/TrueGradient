############################################################
# TrueGradient Environment Example (.env.example)
# Copy to .env and replace placeholder values.
# MongoDB is hosted on Atlas (no local Mongo container needed).
############################################################

# Flask / JWT Secrets
SECRET_KEY=change-this-secret
JWT_SECRET_KEY=change-this-jwt-secret

# MongoDB Atlas (include credentials & cluster host)
# Format: mongodb+srv://<username>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://<username>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority
MONGO_DB_NAME=truegradient

# Flask environment (development|production)
FLASK_ENV=production

# Backend internal listening port (container). Compose overrides to 5001.
PORT=5001

# Frontend build-time variable (the URL the built SPA will call)
VITE_API_BASE_URL=http://localhost:5001
